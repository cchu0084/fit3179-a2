{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 450,
  "height": 420,
  "title": {
    "text": "Average Monthly UV Index in Australia by State",
    "fontSize": 16
  },
  "projection": { "type": "mercator", "center": [134, -28], "scale": 615 },

  "params": [
    {
      "name": "month_selection",
      "value": "Jan",
      "bind": {
        "input": "select",
        "options": ["Jan","Feb","Mar","Apr","May","June","July","Aug","Sept","Oct","Nov","Dec"],
        "name":  "Month: "
      }
    }
  ],

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/cchu0084/FIT3179/refs/heads/main/ausmapwgrati.json",
        "format": { "type": "topojson", "feature": "ne_10m_admin_1_states_provinces" }
      },
      "mark": { "type": "geoshape", "stroke": "lightgrey", "strokeWidth": 0.5 }
    },

    {
      "data": { "graticule": { "step": [5, 5] } },
      "mark": { "type": "geoshape", "stroke": "lightgrey", "strokeWidth": 0.5 }
    },

    {
      "data": {
        "url": "data/UV_Index_Australia_States_LongForm.csv",
        "format": { "type": "csv" }
      },
      "transform": [
        { "filter": "datum.Month == month_selection" },
        {
          "lookup": "State",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/cchu0084/FIT3179/refs/heads/main/ausmapwgrati.json",
              "format": { "type": "topojson", "feature": "ne_10m_admin_1_states_provinces" }
            },
            "key": "properties.name",
            "fields": ["properties", "geometry"]
          },
          "as": ["map_properties", "map_geometry"]
        },
        { "calculate": "toNumber(datum.UV_Index)", "as": "UVnum" }
      ],
      "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 0.7 },
      "encoding": {
        "shape": { "field": "map_geometry", "type": "geojson" },
        "color": {
          "field": "UVnum",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1, 3, 5, 7, 9, 11, 13],
            "range": [
              "#fff8e1",
              "#ffecb3",
              "#ffe082",
              "#ffd54f",
              "#ffb300",
              "#fb8c00",
              "#f57c00",
              "#e65100"
            ]
          },
          "title": "UV Index",
          "legend": {"orient": "bottom-left", "direction": "horizontal", "titleAnchor": "start","titleFontSize": 14, "labelFontSize": 12.5}
        },
        "tooltip": [
          { "field": "State", "title": "State:" },
          { "field": "Month", "title": "Month:" },
          { "field": "UVnum", "title": "Average UV Index" }
        ]
      }
    },

    {
      "data": {
        "values": [
          { "name": "Western Australia", "lon": 122, "lat": -25 },
          { "name": "Northern Territory", "lon": 133.5, "lat": -19 },
          { "name": "South Australia", "lon": 135, "lat": -29 },
          { "name": "Queensland", "lon": 143.5, "lat": -22 },
          { "name": "New South Wales", "lon": 147, "lat": -31 },
          { "name": "Victoria", "lon": 145, "lat": -37 },
          { "name": "Tasmania", "lon": 147, "lat": -42.2 },
          { "name": "ACT", "lon": 149.1, "lat": -34.7, "dx": 8, "dy": -6 }
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 12,
        "fontWeight": "lighter",
        "fill": "black",
        "stroke": "black",
        "strokeWidth": 1,
        "align": "center",
        "baseline": "middle"
      },
      "encoding": {
        "text": { "field": "name" },
        "longitude": { "field": "lon" },
        "latitude": { "field": "lat" },
        "dx": { "field": "dx" },
        "dy": { "field": "dy" }
      }
    },

    {
      "data": {
        "values": [
          { "note": "" }
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "fontSize": 14,
        "color": "navy",
        "lineBreak": "\n"
      },
      "encoding": {
        "text": { "field": "note" },
        "x": { "value": 20 },
        "y": { "value": 365 }
      }
    }
  ],

  "config": {
    "axis": { "domain": false, "grid": false },
    "view": { "stroke": "transparent" }
  }
}
